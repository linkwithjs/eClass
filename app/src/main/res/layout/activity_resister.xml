<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resister">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="280dp">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <EditText
               android:id="@+id/tvEmailAddress"
               android:text="Email Address"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:layout_marginStart="@dimen/margin"
               android:textSize="18sp"
               android:layout_marginLeft="@dimen/margin"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>


           <EditText
               android:id="@+id/tvPasswordResister"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Password"
               android:layout_marginStart="@dimen/margin"
               android:textSize="18sp"
               android:layout_marginTop="4dp"
               app:layout_constraintTop_toBottomOf="@id/tvEmailAddress"
               android:layout_marginLeft="@dimen/margin" />
               tools:ignore="MissingConstraints" />

           <EditText
               android:id="@+id/tvConformpass"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Confrom password "
               android:layout_marginStart="@dimen/margin"
               android:textSize="18sp"
               android:layout_marginTop="5dp"
               app:layout_constraintTop_toBottomOf="@id/tvPasswordResister"
               android:layout_marginLeft="@dimen/margin"/>
           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="resister"
               android:backgroundTint="@color/primary"
               android:id="@+id/btResister"
               android:layout_margin="@dimen/margin"
               app:layout_constraintTop_toBottomOf="@id/tvConformpass"
               />
           <TextView
               android:id="@+id/tvAlreadyHaveAnAccount"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Already have and account ? "
               android:layout_marginHorizontal="50dp"
               android:textAlignment="center"
               android:textSize="18sp"
               android:layout_marginTop="50dp"
               app:layout_constraintTop_toBottomOf="@id/btResister"
               tools:ignore="RtlCompat" />
           <TextView
               android:id="@+id/tvLogin"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Login"
               android:layout_marginHorizontal="50dp"
               android:textAlignment="center"
               android:textColor="@color/primary"
               android:textSize="18sp"
               android:layout_marginTop="30dp"
               app:layout_constraintTop_toBottomOf="@id/tvAlreadyHaveAnAccount"
               tools:ignore="RtlCompat" />



       </androidx.constraintlayout.widget.ConstraintLayout>
   </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>